@using Company_DAL.Models
@model EmployeeViewModel

@{
    var departments = new SelectList(ViewData["Departments"] as IEnumerable<Department>, nameof(Department.Id), nameof(Department.Name));
}



<div asp-validation-summary="All"></div>
<div>
    <label asp-for="Name" class="col-form-label"></label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div>
    <label asp-for="Age" class="col-form-label"></label>
    <input type="text" asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div>
    <label asp-for="Address" class="col-form-label"></label>
    <input type="text" asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div>
    <label asp-for="Salery" class="col-form-label"></label>
    <input type="text" asp-for="Salery" class="form-control" />
</div>
<div>
    <label asp-for="IsActive" class="col-form-label"></label>
    <input type="checkbox" asp-for="IsActive" class="form-check-label"  />
</div>
<div>
    <label asp-for="Gender" class="col-form-label"></label>
    <!-- Dropdown for Gender Enum -->
    @Html.DropDownListFor(model => model.Gender,
            new SelectList(Enum.GetValues(typeof(Gender))),
            "--Select Gender--",
            new { @class = "form-control" })
</div>
<div>
    <label asp-for="Email" class="col-form-label"></label>
    <input type="text" asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div>
    <label asp-for="PhoneNumber" class="col-form-label"></label>
    <input type="text" asp-for="PhoneNumber" class="form-control" />
</div>
<div>
    <label asp-for="HireDate" class="col-form-label"></label>
    <input asp-for="HireDate" class="form-control" />
</div>
<div>
    <label asp-for="Department" class="col-form-label"></label>
    <select class="form-control" asp-items="@departments" asp-for="DepartmentId">
        <option>--Select Department--</option>
    </select>
</div>
